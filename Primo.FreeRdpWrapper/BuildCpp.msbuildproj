<Project Sdk="Microsoft.Build.NoTargets">
	<Target Name="BuildAllCpp" BeforeTargets="Build">
		<MSBuild Projects="Primo.FreeRdpWrapper\Primo.FreeRdpWrapper.vcxproj"
				 BuildInParallel="false"
				 Properties="Configuration=$(Configuration);Platform=x64" />
	</Target>
	<Target Name="CleanAllCpp" BeforeTargets="Clean">
		<MSBuild Projects="Primo.FreeRdpWrapper\Primo.FreeRdpWrapper.vcxproj"
				 Properties="Configuration=$(Configuration);Platform=x64" 
				 BuildInParallel="false"
				 Targets="Clean"  />
		<Exec Command="RMDIR /S /Q $(CppOutDir)" />
	</Target>
	<ItemGroup>
		<ProjectReference Include="Primo.FreeRdpWrapper\Primo.FreeRdpWrapper.vcxproj" />
	</ItemGroup>
</Project>